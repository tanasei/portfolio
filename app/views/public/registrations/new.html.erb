<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label "名前" %><br />
    <%= f.text_field :last_name, placeholder: "氏" %>
    <%= f.text_field :first_name, placeholder: "名" %>
  </div>

  <div class="field">
    <%= f.label "フリガナ" %><br />
    <%= f.text_field :last_name_kana, placeholder: "セイ" %>
    <%= f.text_field :first_name_kana, placeholder: "メイ" %>
  </div>

  <div class="field">
    <%= f.label "郵便番号(ハイフンなし)" %><br />
    <%= f.text_field :post_code, placeholder: "0000000" %>
  </div>

  <div class="field">
    <%= f.label "住所" %><br />
    <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園0-0" %>
  </div>

  <div class="field">
    <%= f.label "電話番号(ハイフンなし)" %><br />
    <%= f.text_field :telephon_number, placeholder: "00000000000" %>
  </div>

  <div class="field">
    <%= f.label "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "パスワード（再入力）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規投稿" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
