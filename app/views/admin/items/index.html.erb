<div class="container">
  <div class="mb-3">
    <h2>商品一覧</h2>
  </div>
  <div class="mb-3 text-right">
    <%= link_to '新規登録', new_admin_item_path , class: "btn btn-primary" %>
  </div>
  <div class="mb-3">
    <table class="table table-hover">
      <thead class="thead-default">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>販売ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item), class: "item_#{item.id}" %></td>
            <td><%= item.selling_price %>円</td>
            <td><%= item.genre.name %></td>
            <td>
              <% if item.is_active == "on_sale" %>
                <span class="text-success"><%= item.is_active_i18n %></span>
              <% else %>
                <span class="text-secondary"><%= item.is_active_i18n %></span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<%= paginate @items %>